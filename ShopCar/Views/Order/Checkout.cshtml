@model Order
@{
    ViewData["Title"] = "Գնում";
}

    <div class="row">
        <div class="m-3">
            <h3>Պատվերի Ձևակերպում</h3>
        </div>
        <div class="col-12 m-4">
            <form asp-action="Checkout" method="post" class="form-horizonal">

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <div class="col-md-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <div class="col-md-8">
                        <input asp-for="Surname" class="form-control" />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Adress"></label>
                    <div class="col-md-8">
                        <input asp-for="Adress" class="form-control" />
                        <span asp-validation-for="Adress" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Phone"></label>
                    <div class="col-md-8">
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <div class="col-md-8">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <input type="submit" class="btn btn-success" value="Կատարել Վճարում" />
            </form>
        </div>
    </div>

